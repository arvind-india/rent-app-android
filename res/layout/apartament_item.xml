<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/apartement_ll"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:orientation="horizontal" >

    <ImageView
        android:id="@+id/apartement_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="img"
        android:src="@drawable/ap" >
    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_elements_result"
        android:orientation="vertical"
        android:layout_weight="2"	
    >
        <TextView  
            android:id="@+id/address"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text=""
        />
        <TextView  
            android:id="@+id/price"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:text=""
        />
        <ua.org.rent.widgets.FlowLayout
            android:id="@+id/apartment_feature"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
		
    </LinearLayout>
	
	
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"	
    >
        <ImageView
            android:id="@+id/apartement_icon_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="img"
            android:src="@android:drawable/ic_menu_call" >
        </ImageView>
                
        <LinearLayout
            android:id="@+id/ll_answer_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"	
        >
            <ImageView
                android:id="@+id/answer_positive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="img"
                android:src="@android:drawable/ic_input_add" >
            </ImageView>
            <ImageView
                android:id="@+id/answer_negative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="img"
                android:src="@android:drawable/ic_delete" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
